@model Arena.Web.ViewModels.Korisnici.KorisnikZaposlenikDodajVM
@{
    ViewData["Title"] = "Dodaj zaposlenika";
}


<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">

                <form asp-action="DodajUposlenik" method="post" autocomplete="off">
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label asp-for="@Model.TipUposlenikaID"></label>
                            <select asp-for="@Model.TipUposlenikaID" asp-items="@Model.TipoviUposlenika" class="form-control"></select>
                            <span class="text-danger" asp-validation-for="@Model.TipUposlenikaID"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="@Model.GradID"></label>
                            <select asp-for="@Model.GradID" asp-items="@Model.Gradovi" class="form-control"></select>
                            <span class="text-danger" asp-validation-for="@Model.GradID"></span>
                        </div>

                        <div class="form-group col-md-12">
                            <label asp-for="@Model.PlataID"></label>
                            <select asp-for="@Model.PlataID" asp-items="@Model.Plate" class="form-control"></select>
                            <span class="text-danger" asp-validation-for="@Model.PlataID"></span>
                        </div>

                        <div class="form-group col-md-12">
                            <label asp-for="@Model.Ime"></label>
                            <input asp-for="@Model.Ime" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.Ime"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="@Model.Prezime"></label>
                            <input asp-for="@Model.Prezime" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.Prezime"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="@Model.BrojTelefona"></label>
                            <input asp-for="@Model.BrojTelefona" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.BrojTelefona"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="@Model.Username"></label>
                            <input asp-for="@Model.Username" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.Username"></span>
                        </div>

                        <div class="form-group col-md-12">
                            <label asp-for="@Model.Password"></label>
                            <input asp-for="@Model.Password" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.Password"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <a class="btn btn-default " asp-controller="Korisnici" asp-action="Index">Nazad</a>
                            <button type="submit" class="btn btn-primary ">Spremi</button>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
