@model Arena.Web.ViewModels.Rezervacije.RezervacijaDodajVM
@{
    ViewData["Title"] = "Dodaj rezervaciju";
}


<div class="row">

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">

                <form asp-action="Dodaj" method="post" autocomplete="off">
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label asp-for="@Model.OdabraniTerminId"></label>
                            <select asp-for="@Model.OdabraniTerminId" asp-items="@Model.Termini" class="form-control"></select>
                            <span class="text-danger" asp-validation-for="@Model.OdabraniTerminId"></span>
                        </div>


                        <div class="form-group col-md-12">
                            <label asp-for="@Model.OdabraniKlijentId"></label>
                            <select asp-for="@Model.OdabraniKlijentId" asp-items="@Model.Klijenti" class="form-control"></select>
                            <span class="text-danger" asp-validation-for="@Model.OdabraniKlijentId"></span>
                        </div>

                       
                        <div class="form-group col-md-12">
                            <a class="btn btn-default " asp-controller="Rezervacije" asp-action="Index">Nazad</a>
                            <button type="submit" class="btn btn-primary ">Spremi</button>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>

</div>