@model Arena.Web.ViewModels.Termini.TerminEditVM
@{
    ViewData["Title"] = "Ažuriraj termin";
}


<div class="row">

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">

                <form asp-action="Edit" method="post" autocomplete="off">
                    <input asp-for="@Model.Id"  type="hidden" />

                    <div class="row">
                        <div class="form-group col-md-12">
                            <label asp-for="@Model.OdabranaDvoranaId"></label>
                            <select asp-for="@Model.OdabranaDvoranaId" asp-items="@Model.Dvorane" class="form-control"></select>
                            <span class="text-danger" asp-validation-for="@Model.OdabranaDvoranaId"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="@Model.DatumIVrijeme"></label>
                            <input asp-for="@Model.DatumIVrijeme" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.DatumIVrijeme"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="@Model.Cijena"></label>
                            <input asp-for="@Model.Cijena" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.Cijena"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <a class="btn btn-default " asp-controller="Termin" asp-action="Index">Nazad</a>
                            <button type="submit" class="btn btn-primary ">Ažuriraj</button>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>

</div>